# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DB_USER=postgres
DB_HOST=localhost
DB_NAME=wageguard
DB_PASSWORD=your_password_here
DB_PORT=5432

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# LLM API Configuration
# Only ONE of these API keys is required - the service will auto-detect which provider to use
# Priority order: Anthropic > OpenAI > Google

# Anthropic Claude API (Recommended for compliance explanations)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI GPT API (Alternative option)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API (Alternative option)
GOOGLE_API_KEY=your_google_api_key_here

# Logging
LOG_LEVEL=info

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads
